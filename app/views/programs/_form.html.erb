<%= form_for(program) do |f| %>
  <% if program.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(program.errors.count, "error") %> prohibited this program from being saved:</h2>

      <ul>
      <% program.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :program_code %>
    <%= f.text_field :program_code %>
  </div>

  <div class="field">
    <%= f.label :program_name, "Nama Prodi" %>
    <%= f.text_field :program_name %>
  </div>

  <div class="field">
    <%= f.label :faculty_name %>
    <%= f.collection_select(:faculty_id,Faculty.all,:id,:faculty_name,{:prompt => 'Pilih Fakultas'}, :class=>"form-control") %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
